<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/49a924637f.js" crossorigin="anonymous"></script>
<!-- We are gonna put our CSS at the as it will gonna override all the above written CSS -->
        <link rel="stylesheet" href="./css/home.css">
    </head>
    <body>
        <h1 id="heading">
            <i class="fas fa-id-card-alt"></i>
            My Contact List</h1>

        <ul>
            <%for(let i of contact_list){%>
                <p>
                    <span><%= i.name %></span>
                    <span id="phone-number"><%= i.phone %></span>
                    <span id="delete-icon">
                        
                        <!-- For only params -->
                        <!-- <a href="/delete-contact/<%= i.phone %>"><i class="fas fa-skull-crossbones"></i></a>  -->

                        <!-- For query params -->
                        <a href="/delete-contact/?id=<%= i._id %>"><i class="fas fa-skull-crossbones"></i></a> 

                        <!-- WE can also access  name thru our server by using
                        ?phone=<%= i.phone %>&name=<%=i.name%> -->
                    </span>
                </p>
                <%}%>
        </ul>

        <%if(false){%>
            <h1>This is true block</h1>
        <%}%>
        
        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter Name" id="" required>
            <input type="text" name="phone" placeholder="Enter Contact" id="" required>
            <button>Submit</button>
        </form>
        <script type="text/javascript" src="./js/home.js"></script>
    </body>
</html>